#!/usr/bin/env node

var program =  require('commander');

program
  .version("0.0.1")
  .command('app <command> [options]', 'Application management - add, remove, show, list, etc...')
  .command('car <command> [options]', 'Car management - add, remove, show, list, etc...')
  .command('dc <command> [options]', 'Data Center management')
  .command('events <command> [options]', 'Event Management - add, remove, update etc...')
  .command('hardware <command> [options]', 'Hardware Management - add, remove, update etc...')
  .command('instance <command> [options]', 'Service Instance Management - add, remove, update etc...')
  .command('service <command> [options]', 'Service Management - add, remove, update etc...')
  .command('trigger <command> [options]', 'Trigger Management - add, remove, update etc...')
  .command('vehicle <command> [options]', 'Vehicle Management - add, remove, update etc...')
  .parse(process.argv);

